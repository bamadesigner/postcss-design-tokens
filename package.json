{
  "name": "postcss-design-tokens",
  "version": "1.0.0",
  "description": "PostCSS plugin that provides a function to retrieve design tokens expressed in JS or JSON, within CSS",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-design-tokens",
    "design",
    "token",
    "tokens"
  ],
  "scripts": {
    "test": "jest --coverage && prettier --check . && eslint --ext jsx,json,js .",
    "format": "prettier --write ."
  },
  "author": "jptaranto <jacktaranto@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/jptaranto/postcss-design-tokens",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 90
      }
    }
  },
  "dependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "postcss-value-parser": "^4.2.0"
  }
}
